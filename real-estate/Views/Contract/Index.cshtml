@model List<Contract>


<a class="btn btn-success mb-2" asp-action="New" >Create Contract</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr class="bg-danger text-light fw-bold">
            <td>
                Property Name
            </td>
            <td>
                Employee Name
            </td>
            <td>
                Client Name
            </td>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
            <tr>
                <td>@item.property.Address</td>
                <td>@item.employee.Name</td>
                <td>@item.client.Name</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (item.property.propertyStatus.status == "Rented")
                    {
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>