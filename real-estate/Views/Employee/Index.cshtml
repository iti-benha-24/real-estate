@model List<Employee>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center">Employee List</h1>
            <div class="text-center m-2">
            <a class="btn btn-primary" asp-action="Add" asp-controller="Employee">Add Employee </a>
            </div>
            <table class="table table-hover mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td><a class="text-primary" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-dark">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body{
        font-family:cursive;
    }
    .text-primary {
        color: #007bff;
        text-decoration: none;
    }

        .text-primary:hover {
            text-decoration: underline;
        }

    .edit-btn,
    .delete-btn {
        color: #555;
        font-size: 18px;
        margin-right: 10px;
        transition: color 0.3s; 
    }

        .edit-btn:hover {
            color: #007bff;
        }

        .delete-btn:hover {
            color: red;
        }
</style>
