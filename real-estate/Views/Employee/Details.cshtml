@model Employee

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">@Model.Name</h1>
            <div class="row">
                @foreach (var property in Model.properties)
                {
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <img src="@property.PropertyImg"  width="200px"/>
                                <h5 class="card-title">@property.Address</h5>
                                <p class="card-text"><strong>City:</strong> @property.city.Name</p>
                                <p class="card-text"><strong>Size:</strong> @property.PropertySize</p>
                                <p class="card-text"><strong>Type:</strong> @property.propertyType.type</p>
                                <p class="card-text"><strong>Status:</strong> @property.propertyStatus.status</p>
                                <p class="card-text"><strong>Bedrooms:</strong> @property.NumBedrooms</p>
                                <p class="card-text"><strong>Bathrooms:</strong> @property.NumBathrooms</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a asp-action="Index" class="btn btn-secondary mt-2">Back to Employees</a>
        </div>
    </div>
</div>
